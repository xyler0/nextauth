generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PostSource {
  GITHUB
  JOURNAL
}

model PostingStats {
  id        String   @id @default(cuid())
  date      DateTime @unique @db.Date
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
}
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed
  name      String?
  
  // GitHub OAuth
  githubId          String?   @unique
  githubAccessToken String?
  githubUsername    String?
  githubRepos       String[]
  
  // X/Twitter OAuth 
  xId            String?   @unique
  xUsername      String?
  xAccessToken   String?
  xAccessSecret  String?
  
  // Deprecated manual credentials
  xApiKey        String?
  xApiSecret     String?
  
  // Settings
  maxPostsPerDay Int      @default(3)
  timezone       String   @default("UTC")
  
  posts          Post[]
  journalEntries JournalEntry[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email])
}

// Post model to link to user
model Post {
  id        String   @id @default(cuid())
  content   String
  hash      String   @unique
  source    PostSource
  posted    Boolean  @default(false)
  postedAt  DateTime?
  metadata  Json?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([hash])
  @@index([posted, createdAt])
  @@index([source, createdAt])
  @@index([userId, createdAt])
}

// Updated JournalEntry to link to user
model JournalEntry {
  id        String   @id @default(cuid())
  content   String   @db.Text
  metadata  Json?
  processed Boolean  @default(false)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([processed, createdAt])
  @@index([userId, createdAt])
}
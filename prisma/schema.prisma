generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PostSource {
  GITHUB
  JOURNAL
}

model PostingStats {
  id        String   @id @default(cuid())
  date      DateTime @unique @db.Date
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  
  // Auth.js integration - link to auth user
  authUserId String?  @unique  // Maps to Auth.js user.id
  
  // Business logic - GitHub monitoring
  githubRepos       String[]  // Repositories to monitor (business logic only)
  
  // Settings
  maxPostsPerDay Int      @default(3)
  timezone       String   @default("UTC")
  
  // Relations
  posts            Post[]
  journalEntries   JournalEntry[]
  trainingFeedback TrainingFeedback[]
  writingPattern   WritingPattern?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email])
  @@index([authUserId])
}

model WritingPattern {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Sentence structure
  avgSentenceLength    Float    @default(0)
  avgWordsPerSentence  Float    @default(0)
  maxSentenceLength    Int      @default(0)
  minSentenceLength    Int      @default(0)
  
  // Vocabulary
  commonWords          Json
  avoidWords           Json
  technicalTerms       Json
  
  // Style indicators
  usesEmojis           Boolean  @default(false)
  usesHashtags         Boolean  @default(false)
  usesAbbreviations    Boolean  @default(false)
  formalityScore       Float    @default(5.0)
  
  // Punctuation patterns
  commaFrequency       Float    @default(0)
  periodFrequency      Float    @default(0)
  dashFrequency        Float    @default(0)
  ellipsisFrequency    Float    @default(0)
  
  // Sentence starters
  commonStarters       Json
  
  // Examples
  examplePosts         Json
  
  // Learning metadata
  totalPostsAnalyzed   Int      @default(0)
  lastUpdated          DateTime @updatedAt
  createdAt            DateTime @default(now())
  
  @@index([userId])
}

model TrainingFeedback {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  originalText    String   @db.Text
  generatedText   String   @db.Text
  editedText      String?  @db.Text
  
  rating          Int
  feedback        String?  @db.Text
  
  accepted        Boolean  @default(false)
  
  createdAt       DateTime @default(now())
  
  @@index([userId, createdAt])
}

model Post {
  id        String   @id @default(cuid())
  content   String
  hash      String   @unique
  source    PostSource
  posted    Boolean  @default(false)
  postedAt  DateTime?
  metadata  Json?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([hash])
  @@index([posted, createdAt])
  @@index([source, createdAt])
  @@index([userId, createdAt])
}

model JournalEntry {
  id        String   @id @default(cuid())
  content   String   @db.Text
  metadata  Json?
  processed Boolean  @default(false)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([processed, createdAt])
  @@index([userId, createdAt])
}